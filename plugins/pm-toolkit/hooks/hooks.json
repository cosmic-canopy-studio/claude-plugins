{
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'PM Toolkit ready. Describe what you need - research, documents, planning, or meeting processing.'",
            "timeout": 1000
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 \"${CLAUDE_PLUGIN_ROOT}/scripts/suggest-next-step.py\" 2>/dev/null || true",
            "timeout": 2000
          }
        ]
      }
    ]
  }
}
